<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grocery_details_main_card"
    style="@style/CardView.NonClickable"
    >

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/grocery_details_image"
            style="@style/ImageView.FullWidth"
            android:layout_height="180dp"
            android:src="@drawable/grains"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/grocery_details_sub_cat"
            style="@style/TextView.SubText"
            android:layout_gravity="center"
            android:text="Vegetables"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/grocery_details_name"
            style="@style/TextView.TitleText"
            android:layout_gravity="center"
            android:text="Tomatoes"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/grocery_details_description"
            style="@style/TextView.SubText"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Description"
            />

        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="7"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/grocery_details_quantity_title"
                style="@style/TextView.SubText"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="4"
                android:text="Available Quantity:"
                android:textStyle="bold"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/grocery_details_quantity_value"
                style="@style/TextView.SubText"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                android:paddingStart="8dp"
                android:text="2 Kgs"
                />

        </com.google.android.material.circularreveal.CircularRevealLinearLayout>

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grocery_details_update"
                style="@style/Button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/add_to_collection"
                app:backgroundTint="@color/primary_text"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grocery_details_consume"
                style="@style/Button"
                android:layout_width="40dp"
                android:layout_toEndOf="@id/grocery_details_update"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/minus"
                app:backgroundTint="@color/primary_text"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grocery_details_untrack"
                style="@style/Button"
                android:layout_toEndOf="@id/grocery_details_consume"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/delete"
                app:backgroundTint="@color/primary_text"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grocery_details_add_to_cart"
                style="@style/Button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add_shopping_cart"
                app:backgroundTint="@color/primary_text"
                android:layout_toStartOf="@id/grocery_details_history_btn"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grocery_details_history_btn"
                style="@style/Button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/history"
                app:backgroundTint="@color/primary_text"
                android:layout_marginStart="10dp"
                />

        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>

</com.google.android.material.card.MaterialCardView>