<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/baloo_tamma2_medium</item>
    </style>

    <style name="CardView.Clickable" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/card_bg</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="TextView.SubText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView.TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.DescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="rippleColor">@color/white_btn_ripple</item>
    </style>

    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">end</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="iconTint">@color/item_on_primary</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="iconSize">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/secondary_text</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ImageView.FullWidth" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageView.FixedWidth" parent="">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="CardView.NonClickable" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/card_bg</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">start|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="itemIconTint">@color/item_on_primary</item>
        <item name="itemTextColor">@color/item_on_primary</item>
        <item name="android:textColor">@color/item_on_primary</item>
    </style>

    <style name="NormalButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/item_on_primary</item>
        <item name="rippleColor">@color/white_btn_ripple</item>
    </style>

    <style name="VerticalRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TopbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DropDownField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>

    <style name="TextInputField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="helperTextEnabled">true</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>

</resources>
